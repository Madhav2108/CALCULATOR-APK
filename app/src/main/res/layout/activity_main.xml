<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:weightSum="100">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="100">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:gravity="bottom|end"
            android:textSize="50sp"
            android:textStyle="bold"
            android:visibility="visible"/>

<TextView
    android:id="@+id/tv1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="10"
    android:hint="0"
    android:textSize="40sp"
    android:gravity="bottom|end"
    android:alpha="0.7" />

        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"
            android:weightSum="100">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="75"
                android:weightSum="4">


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/nine"
                        android:text="9"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:clickable="true"
                        android:id="@+id/eight"
                        android:text="8"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/seven"
                        android:text="7"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/six"
                        android:text="6"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/five"
                        android:text="5"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/four"
                        android:text="4"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/three"
                        android:text="3"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/two"
                        android:text="2"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/one"
                        android:text="1"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/zero"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/dot"
                        android:text="."
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/equal"
                        android:text="="
                        android:textSize="30sp"
                        android:textColor="#fff"
                        android:background="@drawable/magic"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>



                </LinearLayout>
            </LinearLayout>



            <LinearLayout

                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:weightSum="5">

                <Button
                    android:id="@+id/plus"
                    android:text="+"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/magic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/minus"
                    android:text="-"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/magic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/div"
                    android:text="/"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/magic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/mul"
                    android:text="x"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/magic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <Button
                    android:id="@+id/clear"
                    android:text="c"
                    android:textSize="30sp"
                    android:textColor="#fff"
                    android:background="@drawable/magic"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>